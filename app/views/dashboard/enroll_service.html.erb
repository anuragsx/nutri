<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= @service.title%>
            </div>
            <div class="panel-body">
              <div class="row">
                  <div class="col-lg-12">
                    <%= @service.description%>
                    <br />
                    <br />
                    <div class="form-group">
                        <label>Choose a package</label>
                        <div class="radio">
                            <label>
                                <% @service.packages.each do |package| %>
                                  <input type="radio" name="optionsRadios" id="optionsRadios1"><b><%= package.price%> INR For <%= package.duration %> Months &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b>
                                <%end%> 
                            </label>
                            <br />
                            <br />
                            <button type="button" class="btn btn-primary btn-lg" id="enrollButton">Enroll Now</button>
                        </div>
                    </div>
                  </div>
                  <!-- /.row (nested) -->
              </div>
            <!-- /.panel-body -->
            </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<script type="text/javascript">
  $( document ).ready(function() {
    //This will check the status of radio button onload
    //$('input[name=optionsRadios]').each(function() {
        
    //});
    $("#enrollButton").attr('disabled',true);

    //This will check the status of radio button onclick
    $('input[name=optionsRadios]').click(function() {
      $("#enrollButton").attr('disabled',false);
    });
       
  });
</script> 