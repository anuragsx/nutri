<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Manage Services
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>S. No.</th>
                            <th>Service Name</th>
                            <th>Packages</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @services.each_with_index do |service, index| %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= service.title %></td>
                        <td>
                            <%= link_to '<button type="button" class="btn btn-primary">Manage Packages</button>'.html_safe, service_packages_path(service) %>
                        </td>
                        <td>
                          <%= link_to '<button type="button" class="btn btn-primary">Edit</button>'.html_safe, edit_service_path(service) %>
                          <%= link_to '<button type="button" class="btn btn-primary">Delete</button>'.html_safe, service, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                </table>

                <%= link_to '<button type="button" class="btn btn-primary">Add New Service</button>'.html_safe, new_service_path %>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->