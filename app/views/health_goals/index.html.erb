<p id="notice"><%= notice %></p>

<h1>Health Goals</h1>

<table>
  <thead>
    <tr>
      <th>Goal name</th>
      <th>Goal desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @health_goals.each do |health_goal| %>
      <tr>
        <td><%= health_goal.goal_name %></td>
        <td><%= health_goal.goal_desc %></td>
        <td><%= link_to 'Show', health_goal %></td>
        <td><%= link_to 'Edit', edit_health_goal_path(health_goal) %></td>
        <td><%= link_to 'Destroy', health_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Health Goal', new_health_goal_path %>
