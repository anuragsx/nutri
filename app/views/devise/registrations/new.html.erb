

<div class="regouter">
  <div class="container">
     <div class="row">
       <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
               <div class="regarea">
                        <h2>Register to Begin Your Consultation </h2>
                            <div class="regform">
                                 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                    <% if flash.present? %>
                                      <div class="alert alert-danger alert-dismissable">
                                        <%- flash.each do |name, msg| -%>
                                          <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                                        <%- end -%>
                                      </div>
                                    <%end%>   
                            
                                    <%= f.text_field :first_name, placeholder: 'Enter first name' %>
                                    <%= f.text_field :last_name, placeholder: 'Enter last name' %>
                                    <%= f.text_field   :phone_no, placeholder: 'Enter phone no' %>
                                    <%= f.email_field :email, autofocus: true, placeholder: 'Enter email'%>
                                    <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter password' %> 
                                    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Enter password confirmation' %>                                 
                                    <%= f.hidden_field :role_id, value: 3 %>
                                    <%= f.submit "Sign Up", class: "subbtn" %>
                                    <p>Already have an account? </p>
                                    <%= render "devise/shared/links" %>
                                  <% end %>
                            </div>
               </div>
         </div>
      </div>
   </div>
</div>

  