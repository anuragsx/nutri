<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Order Details - <%= @service.title%> - <%=@package.duration%> Month(s)  </b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
            <div class="row">
              <% if current_user.orders.last.order_status == 1%> 
                <div class="col-sm-12 box" style="margin-top:10px; margin-bottom:10px">Thanks for making the payment. Your diet chart will be uploaded in next one hour. Please click on Diet Charts link after one hour to download it. Feel free to contact, if you have queries.
                </div>
              <% else %>
                <div class="col-sm-12 box" style="margin-top:10px; margin-bottom:10px">Your transaction has been Failed. Please try again!
                </div>
              <% end -%> 

              </div>
            </div>
            <%# payment_form_for_payu PAY_U_KEY, PAY_U_SALT,
                  :txnid => transaction_id,
                  :amount => @package.price,
                  :productinfo => @service.title,
                  :firstname => current_user.first_name,
                  :email => current_user.email,
                  :phone => current_user.phone_no,
                  :surl => 'http://wisenutrition.in/payu_callback',
                  :furl => 'http://wisenutrition.in/payu_callback',
                  :service_provider => 'payu_paisa',
                  :html => { :id => 'payment-form' },
                  :class => 'class="btn btn-primary btn-lg btn-block' 
            %>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<script type="text/javascript">
  $( document ).ready(function() {
    $('input[type=submit]').attr('class','btn btn-primary btn-lg btn-block')
    $('input[type=submit]').attr('value','Make Payment')
  });
</script> 