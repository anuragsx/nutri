<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Manage Orders
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>S. No.</th>
                            <th>Service</th>
                            <th>Package</th>
                            <th>Payment Status</th>
                            <th>Amount Received</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @orders.each_with_index do |order, index| %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= order.service_name %></td>
                        <td><%= order.package_name %>&nbsp; Months(s)</td>
                        <td><%= order.payment_status %></td>
                        <td><%= order.total_amount %></td>
                        <td>
                            <%# link_to '<button type="button" class="btn btn-primary">Profile
                            </button>'.html_safe, '#'%>&nbsp;&nbsp;
                            <%#= link_to '<button type="button" class="btn btn-success">Orders
                            </button>'.html_safe, user_orders_path()%>
                            &nbsp;&nbsp;
                            <%#= link_to '<button type="button" class="btn btn-info">
                            Diet Charts
                            </button>'.html_safe, '#'%>
                            &nbsp;&nbsp;
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                </table>

                <%#= link_to '<button type="button" class="btn btn-primary">Add New Service</button>'.html_safe, new_service_path %>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->