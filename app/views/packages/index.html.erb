<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Manage Packages
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <% if @packages.present? %>
                      <thead>
                          <tr>
                              <th>S. No.</th>
                              <th>Service Name</th>
                              <th>Duration</th>
                              <th>Price</th>
                              <th>Actions</th>
                          </tr>
                      </thead>
                      <tbody>
                    
                      <% @packages.each_with_index do |package, index| %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= package.service.title %></td>
                          <td><%= package.duration %></td>
                          <td><%= package.price %></td>
                          <td>

                            <%#= link_to '<button type="button" class="btn btn-primary">Edit</button>'.html_safe, edit_service_path(service) %>
                            <%#= link_to '<button type="button" class="btn btn-primary">Delete</button>'.html_safe, service, method: :delete, data: { confirm: 'Are you sure?' } %>
                          </td>
                        </tr>
                      <% end %>
                    <% else %>
                      <tr>No packages added yet. Please add New Package(s).</tr>
                    <% end %>  
                    </tbody>
                </table>

                <%= link_to '<button type="button" class="btn btn-primary">Add New Package</button>'.html_safe, new_service_package_path(params[:service_id]) %>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->